{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm ci && npm run build -w @cumor/shared && npm run build -w @cumor/server"
    },
    "deploy": {
        "startCommand": "npm run start -w @cumor/server",
        "healthcheckPath": "/",
        "restartPolicyType": "ON_FAILURE"
    }
}